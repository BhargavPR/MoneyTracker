<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Information">

    <android.support.v7.widget.Toolbar
        android:id="@+id/information_update_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        app:title="Income/Expenses Details"
        app:titleTextColor="@color/white" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/information_update_activity_toolbar"
        android:elevation="100dp">

        <include
            layout="@layout/information_update_detail_box"
            android:id="@+id/information_update_display_box"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/information_update_activity_toolbar"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/update_edit_icon_24dp"
            app:elevation="6dp"
            app:layout_anchor="@id/information_update_display_box"
            app:layout_anchorGravity="bottom|end" />
    </android.support.design.widget.CoordinatorLayout>







</RelativeLayout>
